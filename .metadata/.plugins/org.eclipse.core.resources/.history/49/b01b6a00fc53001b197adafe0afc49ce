package com.generatorreportemail.rest.model;

import java.net.URISyntaxException;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.mail.SimpleMailMessage;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

@Service
public class GeneratorEmailImpl implements GeneratorEmail {
	
	public GeneratorEmailImpl() {
		// TODO Auto-generated constructor stub
	}
	
	
	@Autowired
	private JavaMailSender javaMailSender;

	@Override
	public ResponseEntity<String> sendEmail(String name, String surname) throws URISyntaxException {
		
		SimpleMailMessage msg = new SimpleMailMessage();
        msg.setTo(""+name+""+surname+"@gmail.com");
        msg.setSubject("Test Invio Mail");
        msg.setText("Ciao come stai, la mia mail spring ti Ã¨ arrivata correttamente?");

        javaMailSender.send(msg);
		
        return null;
	}

}
